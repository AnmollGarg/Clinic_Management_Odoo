<odoo>
    <record id="view_clinic_working_time_form" model="ir.ui.view">
        <field name="name">clinic.working.time.form</field>
        <field name="model">clinic.working.time</field>
        <field name="arch" type="xml">
            <form string="Clinic Working Time">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="work_from"/>
                            <field name="work_to"/>
                            <field name="working_hours"/> 
                            <field name="timezone"/>
                            <field name="average_hour_per_day"/>
                            <field name="appointment_time"/>
                            <field name="break_between_appointments"/>
                            <field name="slot_per_day_morning"/>
                            <field name="slot_per_day_evening"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Working Hours">
                            <field name="working_hour_ids">
                                <list editable="bottom">
                                    <field name="doctor_name"/>
                                    <field name="name"/>
                                    <field name="day_of_week"/>
                                    <field name="day_period"/>
                                    <field name="work_from"/>
                                    <field name="work_to"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
                 <chatter>

                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>

                </chatter >
            </form>
        </field>
    </record>

    <record id="view_clinic_working_time_list" model="ir.ui.view">
        <field name="name">clinic.working.time.list</field>
        <field name="model">clinic.working.time</field>
        <field name="arch" type="xml">
            <list string="Clinic Working Time">
                <field name="name"/>
                <field name="work_from"/>
                <field name="work_to"/>
                <field name="working_hours"/> 
                <field name="timezone"/>
                <field name="average_hour_per_day"/>
                <field name="appointment_time"/>
                <field name="break_between_appointments"/>
                <field name="slot_per_day_morning"/>
                <field name="slot_per_day_evening"/>
            </list>
        </field>
    </record>

       <record id="action_clinic_working_time" model="ir.actions.act_window">
        <field name="name">Working Time</field>
        <field name="res_model">clinic.working.time</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>