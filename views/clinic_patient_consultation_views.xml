<odoo>
    <!-- Action for Clinic Patient Consultation -->
    <record id="action_clinic_patient_consultation" model="ir.actions.act_window">
        <field name="name">Consultations</field>
        <field name="res_model">clinic.patient.consultation</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List View Clinic Patient Consultation -->
    <record id="view_clinic_patient_consultation_list" model="ir.ui.view">
        <field name="name">clinic.patient.consultation.list</field>
        <field name="model">clinic.patient.consultation</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
            </list>
        </field>
    </record>
</odoo>