<odoo>
    <!-- Action for Patients -->
    <record id="action_res_partner_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_patient','=',True)]</field>
    </record>

    <!-- List View Patients -->
    <record id="view_res_partner_patient_list" model="ir.ui.view">
        <field name="name">res.partner.patient.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="age"/>
                <field name="partner_blood_group"/>
            </list>
        </field>
    </record>

    <!-- Form View Patients -->
    <record id="view_res_partner_patient_form" model="ir.ui.view">
        <field name="name">res.partner.patient.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="email"/>
                </group>
            </form>
        </field>
    </record>

    <!-- List View Clinic Patients -->
    <record id="view_clinic_patient_list" model="ir.ui.view">
        <field name="name">clinic.patient.list</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>